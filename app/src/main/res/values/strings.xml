<resources>
    <string name="app_name">File Transfer</string>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <string-array name="Image_types">
        <item value="jpg">jpg</item>
        <item value="jpeg">jpeg</item>
        <item value="gif">gif</item>
        <item value="svg">svg</item>
        <item value="tif">tif</item>
        <item value="tiff">tiff</item>
    </string-array>

    <string-array name="Document_types">
        <item value="txt">txt/</item>
        <item value="pdf">pdf</item>
        <item value="doc">doc/</item>
        <item value="docx">docx</item>
        <item value="xls">xls/</item>
        <item value="xlsx">xlsx</item>
        <item value="html">html</item>
        <item value="htm">htm</item>
    </string-array>

