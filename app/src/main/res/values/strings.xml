    <string-array name="Presentation_types">
        <item value="ppt">ppt</item>
        <item value="pptx">pptx</item>
        <item value="odp">odp/</item>
        <item value="key">key</item>
    </string-array>

    <string-array name="Audio_types">
        <item value="mp3">mp3</item>
        <item value="wav">wav/</item>
        <item value="m4a">m4a</item>
    </string-array>

    <string-array name="file_list">
        <item value="Image">Image</item>
        <item value="Document">Document</item>
        <item value="Video">Video</item>
        <item value="Presentation">Presentation</item>
        <item value="Audio">Audio</item>
